{
    "name": "blockmulticursor",
    "displayName": "BlockMultiCursor",
    "description": "BlockMultiCursor allows adding multiple cursors simply",
    "version": "1.0.1",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/onelivesleft/BlockMultiCursor"
    },
    "publisher": "onelivesleft",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.growUp",
        "onCommand:extension.growDown",
        "onCommand:extension.grow"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.growUp",
                "title": "BlockMultiCursor: Grow Up"
            },
            {
                "command": "extension.growDown",
                "title": "BlockMultiCursor: Grow Down"
            },
            {
                "command": "extension.grow",
                "title": "BlockMultiCursor: Grow"
            }
        ],
        "keybindings": [
            {
                "command": "extension.growUp",
                "key": "ctrl+alt+shift+up",
                "mac": "cmd+alt+shift+up",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.growDown",
                "key": "ctrl+alt+shift+down",
                "mac": "cmd+alt+shift+down",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.grow",
                "key": "ctrl+alt+shift+right",
                "mac": "cmd+alt+shift+right",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.36",
        "minimist": ">=1.2.3"
    },
    "keywords": [
        "Cursor",
        "Multicursor",
        "Multi"
    ]
}
